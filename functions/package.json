{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "kill-port": "npx kill-port 8081 && npx kill-port 5000 && npx kill-port 5001 && npx kill-port 3002 && npx kill-port 9000 && npx kill-port 8085 && npx kill-port 9199 && clear && say 'Killed all ports' && npm run debug",
    "debug": "clear && say 'Starting debug builds' && npm run build -- --watch | firebase emulators:start"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/jimp": "^0.2.28",
    "express": "^4.18.1",
    "firebase-admin": "^10.2.0",
    "firebase-functions": "^3.21.2",
    "jimp": "^0.16.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/multer": "^1.4.7",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "multer-firebase": "^1.4.2",
    "typescript": "^3.8.0"
  },
  "private": true
